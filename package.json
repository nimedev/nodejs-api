{
  "name": "nodejs-api",
  "version": "6.0.0",
  "description": "A starting point to implement APIs with node js",
  "scripts": {
    "install:dev": "export NODE_ENV='development' && yarn",
    "lint": "eslint . --ext js",
    "start": "npm run start:routes | npm run start:user",
    "start:routes": "node routes",
    "start:user": "node user",
    "test": "npm run test:unit && npm run test:api",
    "test:api": "mocha '__tests__/api/**/*.spec.js'",
    "test:unit": "npm run test:libs && npm run test:user",
    "test:libs": "mocha 'libs/**/*.spec.js'",
    "test:user": "mocha 'user/**/*.spec.js'"
  },
  "pre-commit": [
    "lint",
    "test"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/nimedev/nodejs-api.git"
  },
  "author": "Nicolás Mejía Correa <nicolasmejiaco@gmail.com> (https://twitter.com/nimedev)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nimedev/nodejs-api/issues"
  },
  "homepage": "https://github.com/nimedev/nodejs-api#readme",
  "engines": {
    "npm": ">=3.10.10",
    "node": ">=6.10.3 <7.0.0"
  },
  "dependencies": {
    "body-parser": "1.17.1",
    "compression": "1.6.2",
    "cors": "2.8.3",
    "express": "4.15.2",
    "mongoose": "4.9.8"
  },
  "devDependencies": {
    "chai": "3.5.0",
    "chai-http": "3.0.0",
    "errorhandler": "1.5.0",
    "eslint": "3.19.0",
    "eslint-config-nimedev-base": "3.0.0",
    "eslint-plugin-import": "2.2.0",
    "mocha": "3.3.0",
    "morgan": "1.8.1",
    "pre-commit": "1.2.2"
  },
  "eslintConfig": {
    "extends": "nimedev-base"
  }
}
